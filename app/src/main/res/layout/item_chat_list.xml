<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/holder_LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="1dp"
    android:background="@color/backgroundColor"
    android:orientation="horizontal"
    android:padding="5dp">

    <!--<com.example.sindhusha.util.RoundedImageView-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user" />
        <TextView
            android:id="@+id/green_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/greendot"
            android:visibility="gone"
             />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/tv_match_info"
                android:clickable="false"
                android:focusable="false"
                android:layout_alignParentLeft="true"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:padding="5dp"
                android:textColor="@color/gray3"
                android:text=""
                android:textSize="21sp" />

            <TextView
                android:id="@+id/tv_match_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/tv_name"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="right"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/md_grey_500"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:maxLines="1"
                android:layout_toLeftOf="@+id/tv_time_last_message"
                android:singleLine="true"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/md_grey_700"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_time_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_status"
                android:padding="5dp"
                android:gravity="right"
                android:text=""
                android:layout_alignParentRight="true"
                android:textColor="@color/md_grey_500"
                android:textSize="13sp" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
