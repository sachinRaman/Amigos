<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.amigos.sachin.CustomViews.CustomViewPager
        android:id="@+id/my_profile_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.amigos.sachin.CustomViews.CustomViewPager>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@color/itemIconTint"
        app:itemTextColor="@color/itemTextColor"
        app:menu="@menu/bottom_navigation_my_profile" />

</LinearLayout>