<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amigos.sachin.Activities.SearchActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:background="@drawable/searchboxborder">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_search_white_24dp"
            android:tint="@color/gray2"/>

        <EditText
            android:id="@+id/et_search_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="Search for people..."
            android:background="@color/md_white_1000"
            android:textColorHint="@color/gray2"
            android:textColor="@color/gray2"
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:inputType="textNoSuggestions" />

    </LinearLayout>


    <ListView
        android:id="@+id/listView_search_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
