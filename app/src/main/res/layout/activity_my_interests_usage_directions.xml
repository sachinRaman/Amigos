<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:context="com.amigos.sachin.Activities.MyInterestsUsageDirections">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/backgroundColor"
            android:background="@drawable/usage_instructions_border"
            android:text="Drag and Drop your interests into the right buckets"
            android:textSize="18dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView4"
            android:orientation="vertical"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="All Interests"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/backgroundColor"
                    android:background="@drawable/usage_instructions_border" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="My Passions"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/backgroundColor"
                    android:background="@drawable/usage_instructions_border" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="My Hobbies"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/backgroundColor"
                    android:background="@drawable/usage_instructions_border"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="I Appreciate"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/backgroundColor"
                    android:background="@drawable/usage_instructions_border" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Interest tag"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp"
            android:layout_marginLeft="28dp"
            android:textColor="@color/backgroundColor"
            android:background="@drawable/usage_instructions_border"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button_usage_directions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_color"
            android:minHeight="0dp"
            android:minWidth="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="OK"
            android:textColor="@color/actionBarTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_right"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginStart="66dp"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="300dp"
            android:src="@drawable/arrow_below"
            android:layout_marginStart="15dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignStart="@+id/textView9"
            android:layout_marginTop="14dp"
            android:id="@+id/imageView3" />

        <ImageView
            android:layout_width="325dp"
            android:layout_height="325dp"
            android:src="@drawable/angled_arrow"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignEnd="@+id/button_usage_directions"
            android:layout_marginBottom="12dp" />

    </RelativeLayout>

</RelativeLayout>
