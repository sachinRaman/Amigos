<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amigos.sachin.AllUsersFragments.AllUsersFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="3dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView_profileImage"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="false"
                        android:background="@color/backgroundColor"
                        android:transitionName="@string/zoom_transition_string"
                        android:src="@drawable/ic_user" />


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                            android:id="@+id/tv_display_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:gravity="center"
                            android:text="User name"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/textColor"/>

                        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                            android:id="@+id/tv_extra_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:clickable="false"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/tv_click"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:clickable="false"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:singleLine="true"
                                android:textColor="@color/colorPrimary"
                                android:text="Clicks 80%"
                                android:textSize="14sp"
                                android:layout_marginRight="2dp"/>

                            <TextView
                                android:id="@+id/tv_bullet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:clickable="false"
                                android:gravity="center"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal"
                                android:singleLine="true"
                                android:textColor="@color/colorPrimary"
                                android:text="\u2022"
                                android:textSize="14sp"
                                android:layout_marginRight="2dp"/>

                            <TextView
                                android:id="@+id/tv_admired_you"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:clickable="false"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:singleLine="true"
                                android:visibility="gone"
                                android:textColor="@color/colorPrimary"
                                android:text="Admires You"
                                android:textSize="14sp"/>

                        </LinearLayout>




                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/textView_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:clickable="false"
                android:inputType="textMultiLine"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Status"
                android:textColor="@color/gray3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_professionalProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Profession"
                android:textColor="@color/gray3"
                android:textSize="15sp" />

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/tv_activity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="@color/gray3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_interestedActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Intro"
                android:textColor="@color/gray3"
                android:textSize="15sp" />

            <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
                android:id="@+id/tv_activity1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="@color/gray3"
                android:textSize="18sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />-->

            <TextView
                android:id="@+id/tv_interests1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Passionate about"
                android:textColor="@color/gray3"
                android:textSize="15sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor">

                <com.cunoraz.tagview.TagView xmlns:tagview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tags_interests1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    tagview:lineMargin="5dp"
                    tagview:tagMargin="5dp"
                    tagview:textPaddingBottom="5dp"
                    tagview:textPaddingLeft="8dp"
                    tagview:textPaddingRight="8dp"
                    tagview:textPaddingTop="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_interests2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Hobbies"
                android:textColor="@color/gray3"
                android:textSize="15sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor">

                <com.cunoraz.tagview.TagView xmlns:tagview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tags_interests2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    tagview:lineMargin="5dp"
                    tagview:tagMargin="5dp"
                    tagview:textPaddingBottom="5dp"
                    tagview:textPaddingLeft="8dp"
                    tagview:textPaddingRight="8dp"
                    tagview:textPaddingTop="5dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_interests3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray1"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Appreciates"
                android:textColor="@color/gray3"
                android:textSize="15sp" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundColor">

                <com.cunoraz.tagview.TagView xmlns:tagview="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tags_interests3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    tagview:lineMargin="5dp"
                    tagview:tagMargin="5dp"
                    tagview:textPaddingBottom="5dp"
                    tagview:textPaddingLeft="8dp"
                    tagview:textPaddingRight="8dp"
                    tagview:textPaddingTop="5dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/backgroundColor" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/messageIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/message_icon" />

            <ImageView
                android:id="@+id/crossIcon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="140dp"
                android:src="@drawable/cross_icon2" />


            <RelativeLayout
                android:id="@+id/likeIcon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/likeIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/cross_icon" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/check_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_alignEnd="@+id/likeIcon_layout"
                android:src="@drawable/check_icon" />

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
