<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amigos.sachin.ChatsFragments.PeopleILikedFragment">

    <ListView
        android:id="@+id/peopleILikedListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <TextView
        android:id="@+id/tv_noLikesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="You have not admired anyone yet. Go ahead and admire the people you like."
        android:textSize="20sp" />
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
